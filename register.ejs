<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('../partials/head'); %>
    </head>
    <body>
    <header id="header">
        <%- include('../partials/header'); %>
    </header>
    <main id="main">
        <section class="login">
            <form method="POST" action="/register" id="login-form" class="form-s1">
                <h1 class="caption">Register</h1>
                <div class="fieldgroup"><input autocomplete="off" type="text" name="username" class="textbox" placeholder="Your Username"/></div>
                <div class="fieldgroup"><input autocomplete="off" type="text" name="name" class="textbox" placeholder="Your Name"/></div>
                <div class="fieldgroup"><input autocomplete="off" type="text" name="email" class="textbox" placeholder="Your Email"/></div>
                <div class="fieldgroup"><input type="password" name="password" class="textbox" placeholder="Your Password"/></div>
                <div class="fieldgroup"><input type="password" name="cpassword" class="textbox" placeholder="Type your password again"/></div>
                <div class="fieldgroup">
                    <%= global_data.auth_status %><br/>
                    <input class="button" type="submit" value="Sign Up"/>
                </div>
                <div align="center">
                    <a href="/login">Login</a>
                </div>
            </form>
        </section>
    </main>
    <footer id="footer">
        <%- include('../partials/footer'); %>
    </footer>
</body>
</html>